{
  "rootDir": "./",
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowJs": true,
    "paths": {
      "@romcal/*": ["./packages/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "packages/core/src",
    "packages/data/src",
    "packages/scripts/src",
    "packages/scripts/tmp/bundles",
    "packages/scripts/tmp/constants"
  ],
  "exclude": ["node_modules"],
  "files": ["global.d.ts"]
}
