{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",
    // "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    // "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    // "downlevelIteration": true,
    "importHelpers": true,
    "allowJs": true,
    // "noEmit": true,
    "paths": {
      "@romcal/*": ["./packages/*"]
    },
    "baseUrl": "."
  },
  "include": ["src", "packages/core/src", "packages/data/src", "scripts", "tmp/bundles", "tmp/constants"],
  "exclude": ["node_modules"],
  "files": ["global.d.ts"]
}
