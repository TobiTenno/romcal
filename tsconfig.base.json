{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2022", "esnext"],
    "target": "es2022",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@romcal/build": ["./packages/build/src"],
      "@romcal/build/*": ["./packages/build/src/*"],
      "@romcal/proper-of-time": ["./packages/proper-of-time/src"],
      "@romcal/proper-of-time/*": ["./packages/proper-of-time/src/*"],
      "@romcal/shared": ["./packages/shared/src"],
      "@romcal/shared/*": ["./packages/shared/src/*"],
      "@romcal/package.json": ["./package.json"]
    }
  },
  "exclude": ["node_modules", "**/*/dist"],
  "files": ["global.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
