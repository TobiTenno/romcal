{
  // Linters & Prettier extensions settings
  "files.trimTrailingWhitespace": true,
  "eslint.validate": ["typescript", "json"],
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true, // if developer has eslint extension enabled
    "source.fixAll.tslint": false // if developer has tslint extension enabled
  },
  "eslint.format.enable": false, // let prettier do it, it is faster and safer

  // Jest extension settings
  "jest.rootPath": "./",
  "jest.showCoverageOnLoad": false,
  "jest.debugMode": false,
  "jest.autoRun": "off",
  "jest.jestCommandLine": "pnpm exec jest --runInBand --no-cache",

  // Other settings
  "search.exclude": {
    "**/coverage": true,
    "**/dist": true,
    "**/node_modules": true,
    "pnpm-lock.yaml": true
  },
  "yaml.schemas": {
    "packages/calendars/dist/schemas/CalendarDefInput.schema.json": [
      "packages/calendars/src/continents/**/*.yaml",
      "packages/calendars/src/countries/**/*.yaml",
      "packages/calendars/src/general-roman/**/*.yaml",
      "packages/calendars/src/regions/**/*.yaml"
    ],
    "packages/calendars/dist/schemas/MartyrologyMap.schema.json": "packages/calendars/src/martyrology.yaml",
    "packages/locales/dist/schemas/Locale.schema.json": "packages/locales/src/**/*.yaml"
  },
  "cSpell.words": ["Romcal", "Triduum"],
  "editor.rulers": [100]
}
